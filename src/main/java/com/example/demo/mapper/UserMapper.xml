<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.UserMapper">
	<insert id="insertUser" parameterType="com.example.demo.vo.UserVO">
		insert into users(username, password,firstName,lastName,age,salary)
        values(#{username}, #{password}, #{firstName},#{lastName},#{age},#{salary})

	</insert>
<select id="fetchUserByID" resultType="com.example.demo.vo.UserVO" parameterType="int"> select * from users where id = #{id}</select>
	<select id="userList" resultType="com.example.demo.vo.UserVO"> select * from users order by id</select>
	<delete id="deleteUser" parameterType="int"> DELETE FROM users where id = #{id}</delete>
    <update id= "updateUser" parameterType="com.example.demo.vo.UserVO">
    update users
    set firstName = #{firstName}, lastName = #{lastName}, age=#{age}, salary=#{salary} where id=#{id}
</mapper>